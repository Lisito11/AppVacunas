@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">App Vacunas</MudText>
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <img class="img-fluid" src="https://cdn.pixabay.com/photo/2021/01/02/18/39/syringe-5882593_960_720.jpg" />
        <MudNavMenu Class="mud-width-full">
            <MudDivider Class="my-2" />
            <MudNavLink Href="/" Icon="@Icons.Filled.Home">Inicio</MudNavLink>
            <MudNavLink Href="registrar" Icon="@Icons.Filled.MedicalServices">Registrar</MudNavLink>
            <MudNavLink Href="consultar" Icon="@Icons.Filled.LocalHospital">Consultar</MudNavLink>
            <MudNavLink Href="provinciasvacunadas" Icon="@Icons.Filled.LocationCity">Provincias</MudNavLink>
            <MudNavLink Href="marcavacunas" Icon="@Icons.Filled.Sanitizer">Marca Vacunas</MudNavLink>
            <MudNavLink Href="signozodiacal" Icon="@Icons.Filled.Bolt">Signos Zodiacal</MudNavLink>
            <MudNavLink Href="anularvacunado" Icon="@Icons.Filled.Cancel">Anular Vacunado</MudNavLink>
            <MudNavLink Href="configuracion" Icon="@Icons.Filled.SettingsApplications">Configuración</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


    @code{
        bool _drawerOpen = true;

        void DrawerToggle() {
            _drawerOpen = !_drawerOpen;
        }
        bool Opened = true;

        void ButtonClicked() {
            Opened = !Opened;
        }

        MatTheme theme = new MatTheme() {
            Primary = "#009be5",
            Secondary = "#9c27b0"
        };

        MatTheme Blacktheme = new MatTheme() {
            Primary = "green",
            Secondary = "orange"
        };


        bool toggle = false;
        string icono = "notifications_none";
        void IsToggle() {
            if (!toggle) {
                toggle = true;
                icono = "notifications";
            } else {
                toggle = false;
                icono = "notifications_none";
            }
        }
        DateTime? FeaturesDateTime = DateTime.Now;


    }