@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">App Vacunas</MudText>
            <MudDivider Class="my-2" />
        </MudDrawerHeader>
        <img class="img-fluid" src="https://cdn.pixabay.com/photo/2021/01/02/18/39/syringe-5882593_960_720.jpg" />
        <MudNavMenu Class="mud-width-full">
            <MudDivider Class="my-2" />
            <MudNavLink Href="/" Icon="@Icons.Filled.Home">Inicio</MudNavLink>
            <MudNavLink Href="registrar" Icon="@Icons.Filled.MedicalServices">Registrar</MudNavLink>
            <MudNavLink Href="consultar" Icon="@Icons.Filled.LocalHospital">Consultar</MudNavLink>
            <MudNavLink Href="provinciasvacunadas" Icon="@Icons.Filled.LocationCity">Provincias</MudNavLink>
            <MudNavLink Href="marcavacunas" Icon="@Icons.Filled.Sanitizer">Marca Vacunas</MudNavLink>
            <MudNavLink Href="signozodiacal" Icon="@Icons.Filled.Bolt">Signos Zodiacal</MudNavLink>
            <MudNavLink Href="anularvacunado" Icon="@Icons.Filled.Cancel">Anular Vacunado</MudNavLink>
            <MudNavLink Href="configuracion" Icon="@Icons.Filled.SettingsApplications">Configuración</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

